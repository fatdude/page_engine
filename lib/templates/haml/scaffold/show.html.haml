%h2 <%= singular_table_name.humanize %> details

.attributes
<%- for attribute in attributes -%>
  .attribute
    %p.name
      %strong <%= attribute.human_name %>
    .value
      = @<%= singular_table_name %>.<%= attribute.name %>
<%- end -%>

%p.controls
  = link_to('Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'icon_left edit')
  |  
  = link_to('Delete', @<%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete, :class => 'icon_left delete')
